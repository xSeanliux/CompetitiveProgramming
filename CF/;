#include <iostream>
using namespace std;

const int maxLog = 40;
int Q, d, m, sz[maxLog];

inline void solve(){
	int l;
	for(l = 1; (1 << (l - 1)) <= d; l++){
		sz[l] = (1 << (l - 1));
		if(d < (1 << (l))){
			sz[l] = d - (1 << (l - 1)) + 1;
			break;
		}
	}
	for(int i = 1; i <= l; i++) cout << "sz[" << i << "] = " << sz[i] << endl;
	int ans = 0;
	for(int i = 1; i <= l; i++){
		ans = ans + ans * sz[i] + sz[i]) % m 
	}
}

int main(){
	cin >> Q;
	while(Q--){
		cin >> d >> m;
		solve();
	}
}
